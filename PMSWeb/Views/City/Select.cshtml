@using PMSWeb.ViewModels.CityVM
@model IEnumerable<CityDisplayViewModel>

@{
    ViewData["Title"] = "Cities List";
}

<h2>Cities List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New City</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Created On</th>
            @if (User.IsInRole("Manager"))
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var city in Model)
        {
            <tr>
                <td>@city.Name</td>
                <td>@city.CreatedOn</td>
                @if (User.IsInRole("Manager"))
                {
                    <td>
                         <a asp-action="Delete" asp-route-id="@city.CityId" class="btn btn-danger">Delete</a>
                    </td>
                }
                
            </tr>
        }
    </tbody>
</table>