@using PMSWeb.ViewModels.Consumable
@model ConsumableEditViewModel

@{
    ViewData["Title"] = "Edit Consumable";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Units" class="control-label"></label>
        <input asp-for="Units" class="form-control" />
        <span asp-validation-for="Units" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ROB" class="control-label"></label>
        <input asp-for="ROB" class="form-control" />
        <span asp-validation-for="ROB" class="text-danger"></span>
    </div>

        <button type="submit" class="btn btn-primary">Edit</button>
        <a asp-action="Select" class="btn btn-secondary">Cancel</a>
        <input type="hidden" asp-for="ConsumableId" />
    
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
