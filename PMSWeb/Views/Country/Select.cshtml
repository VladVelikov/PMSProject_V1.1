@using PMSWeb.ViewModels.CountryVM
@model IEnumerable<CountryDisplayViewModel>

@{
    ViewData["Title"] = "List of Countries";
}

<h2>Countries List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Country</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Created On</th>
            @if (User.IsInRole("Manager"))
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var city in Model)
        {
            <tr>
                <td>@city.Name</td>
                <td>@city.CreatedOn</td>
                @if (User.IsInRole("Manager"))
                {
                    <td>
                        <a asp-action="Delete" asp-route-id="@city.CountryId" class="btn btn-danger">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>