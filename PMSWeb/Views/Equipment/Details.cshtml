@using PMSWeb.ViewModels.Equipment
@model EquipmentDetailsViewModel

@{
    ViewData["Title"] = "Equipment Details";
}
<style>
    ul{
        list-style: none outside;
    }
    li{
        margin: 0;
        padding: 0;
    }
   h2{
       max-width: 30em;
       margin: 1em auto;
       text-decoration: underline;
   } 
</style>

<h2>Welcome to Details Page</h2>

<div>
    <h4>Equipment Main Data</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Equipment ID
        </dt>
        <dd class="col-sm-10">
            @Model.EquipmentId
        </dd>

        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>

        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>

        <dt class="col-sm-2">
            Created On
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedOn
        </dd>

        <dt class="col-sm-2">
            Edited On
        </dt>
        <dd class="col-sm-10">
            @Model.EditedOn
        </dd>

        <dt class="col-sm-2">
            Creator
        </dt>
        <dd class="col-sm-10">
            @Model.Creator
        </dd>

        <dt class="col-sm-2">
            Maker
        </dt>
        <dd class="col-sm-10">
            @Model.Maker
        </dd>
    </dl>

    <h4>Additional Data for the Equipment</h4>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Category</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><strong>Routine Maintenances</strong></td>
                <td>
                    <ul>
                        @foreach (string rm in Model.RoutineMaintenances)
                        {
                            <li>@rm</li>
                        }
                    </ul>
                </td>
            </tr>

            <tr>
                <td><strong>Specific Maintenances</strong></td>
                <td>
                    <ul>
                        @foreach (var sm in Model.SpecificMaintenances)
                        {
                            <li>@sm</li>
                        }
                    </ul>
                </td>
            </tr>

            <tr>
                <td><strong>Manuals</strong></td>
                <td>
                    <ul>
                        @foreach (var manual in Model.Manuals)
                        {
                            <li>@manual</li>
                        }
                    </ul>
                </td>
            </tr>

            <tr>
                <td><strong>Spare Parts</strong></td>
                <td>
                    <ul>
                        @foreach (var part in Model.SpareParts)
                        {
                            <li>@part</li>
                        }
                    </ul>
                </td>
            </tr>

            <tr>
                <td><strong>Consumables</strong></td>
                <td>
                    <ul>
                        @foreach (var consumable in Model.Consumables)
                        {
                            <li>@consumable</li>
                        }
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>


    <div>
        <a asp-action="Edit" asp-route-id="@Model.EquipmentId" class="btn btn-info btn-sm">Edit</a> or
        <a asp-action="Select" class="btn btn-secondary btn-sm">Back to List</a>
    </div>
</div>