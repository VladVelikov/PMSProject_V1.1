@{
    ViewData["Title"] = "Creator's Page";
}

<h1 class="text-center text-white mt-4">Welcome to Creator's Page</h1>
<div class="container-fluid bg-dark py-5">
    <div class="row">
        <!-- Consumables Block-->
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card bg-secondary text-white shadow-lg">
                <img src="~/images/creators/Consumables.jpg" class="card-img-top" alt="Consumables Image">
                <div class="card-body">
                    <h5 class="card-title">Consumables</h5>
                    <p class="card-text">Create various consumables for further selection.</p>
                    <a asp-area="" asp-controller="Consumable" asp-action="Select" class="btn btn-light">Start Creating</a>
                </div>
            </div>
        </div>

        <!-- Equipments Block -->
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card bg-secondary text-white shadow-lg">
                <img src="~/images/creators/Equipment.jpg" class="card-img-top" alt="Equipment Image">
                <div class="card-body">
                    <h5 class="card-title">Equipments</h5>
                    <p class="card-text">Add all your equipments with related maintenances.</p>
                    <a asp-area="" asp-controller="Equipment" asp-action="Select" class="btn btn-light">Start Creating</a>
                </div>
            </div>
        </div>

        <!-- Maker Block -->
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card bg-secondary text-white shadow-lg">
                <img src="~/images/creators/Makers.jpg" class="card-img-top" alt="Maker Image">
                <div class="card-body">
                    <h5 class="card-title">Makers</h5>
                    <p class="card-text">Create all makers of your equipment and more.</p>
                    <a asp-area="" asp-controller="Maker" asp-action="Select" class="btn btn-light">Start Creating</a>
                </div>
            </div>
        </div>

        <!-- Manual Block-->
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card bg-secondary text-white shadow-lg">
                <img src="~/images/creators/Manuals.jpg" class="card-img-top" alt="Manual Image">
                <div class="card-body">
                    <h5 class="card-title">Manuals</h5>
                    <p class="card-text">Create detailed manuals and instructions.</p>
                    <a asp-area="" asp-controller="Manual" asp-action="Select" class="btn btn-light">Start Creating</a>
                </div>
            </div>
        </div>

        <!-- Routine Maintenance -->
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card bg-secondary text-white shadow-lg">
                <img src="~/images/creators/RM.jpg" class="card-img-top" alt="RM Image">
                <div class="card-body">
                    <h5 class="card-title">Routine Maintenances</h5>
                    <p class="card-text">Add routine maintenances related to various types of equipment.</p>
                    <a asp-area="" asp-controller="RM" asp-action="Select" class="btn btn-light">Start Creating</a>
                </div>
            </div>
        </div>

        <!-- Specific Maintenance -->
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card bg-secondary text-white shadow-lg">
                <img src="~/images/creators/SM.jpg" class="card-img-top" alt="SM Image">
                <div class="card-body">
                    <h5 class="card-title">Specific Maintenances</h5>
                    <p class="card-text">Add maintenances that target specific equipment.</p>
                    <a asp-area="" asp-controller="SM" asp-action="Select" class="btn btn-light">Start Creating</a>
                </div>
            </div>
        </div>

        <!-- Sparepart Block -->
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card bg-secondary text-white shadow-lg">
                <img src="~/images/creators/Spareparts.jpg" class="card-img-top" alt="Sparepart Image">
                <div class="card-body">
                    <h5 class="card-title">Spareparts</h5>
                    <p class="card-text">Add spare parts to yor inventory list for further use.</p>
                    <a asp-area="" asp-controller="Sparepart" asp-action="Select" class="btn btn-light">Start Creating</a>
                </div>
            </div>
        </div>

        <!-- Suppliers block -->
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card bg-secondary text-white shadow-lg">
                <img src="~/images/creators/suppliers.jpg" class="card-img-top" alt="Supplier Image">
                <div class="card-body">
                    <h5 class="card-title">Suppliers</h5>
                    <p class="card-text">Manage the list of approved suppliers.</p>
                    <a asp-area="" asp-controller="Supplier" asp-action="Select" class="btn btn-light">Start Creating</a>
                </div>
            </div>
        </div>

        <!-- City Block -->
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card bg-secondary text-white shadow-lg">
                <img src="~/Images/creators/Cities.jpg" class="card-img-top" alt="City Image">
                <div class="card-body">
                    <h5 class="card-title">Cities</h5>
                    <p class="card-text">Create list of cities for easy tracking.</p>
                    <a asp-area="" asp-controller="City" asp-action="Select" class="btn btn-light">Start Creating</a>
                </div>
            </div>
        </div>

        <!-- Country Block -->
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card bg-secondary text-white shadow-lg">
                <img src="~/images/creators/Countries.jpg" class="card-img-top" alt="Country Image">
                <div class="card-body">
                    <h5 class="card-title">Countries</h5>
                    <p class="card-text">Mange the Countries selection list.</p>
                    <a asp-area="" asp-controller="Country" asp-action="Select" class="btn btn-light">Start Creating</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #2c2f33;
    }

    h1 {
        font-weight: bold;
    }
    a:hover{
        box-shadow: 0 0 0.2em 0.2em pink;
        transition: 0.3s ease-in;
    }

    .col-md-4:hover{
        box-shadow: 0 0 0.5em 0.2em white inset;
        transition: 0.3s ease-in;
    }
    .col-md-4{
        padding-top: 0.5em;
        padding-bottom: 0.5em;
    }
</style>
