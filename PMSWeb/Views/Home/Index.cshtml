<style>
    /* Full-page gradient background */
    html, body {
        background-color: lightslategrey;
        color: #ffffff;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    /* Outer wrapper for centering only this page's content */
    .home-page-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        width: 100%;
    }

    /* Outer container */
    .outer-container {
        display: flex;
        justify-content: space-around;
        align-items: center;
        width: 90%;
        max-width: 1200px;
    }

    /* Left and right logo sections */
    .round-logo-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 3em;
    }

    .logo-container {
        width: 200px;
        height: 200px;
    }

    .oscillating-logo {
        width: 100%;
        height: auto;
        border-radius: 50%;
        animation: oscillate 25s ease-in-out infinite;
        filter: drop-shadow(0 0 15px rgba(255, 255, 255, 0.8));
    }

    @@keyframes oscillate {
        0%, 100% {
            transform: rotate(0deg);
        }
        50% {
            transform: rotate(360deg);
        }
    }

    /* Centered container */
    .center-container {
        text-align: center;
        flex: 1;
        max-width: 20em;
    }

    .header-image img {
        width: 300px;
        height: auto;
        border: 2px solid grey;
        border-radius: 2em;
        margin-bottom: 2em;
    }

    /* Button container */
    .button-container {
        display: flex;
        flex-direction: column;
        gap: 0.5em;
    }

    .btn-signup, .btn-login {
        padding: 12px 24px;
        font-size: 18px;
        border-radius: 25px;
        text-decoration: none;
        color: #ffffff;
        display: inline-block;
        transition: background 0.3s ease, transform 0.3s ease;
    }

    .btn-signup {
        background: linear-gradient(135deg, #56CCF2, #2F80ED);
    }

    .btn-login {
        background: linear-gradient(135deg, #F2994A, #F2C94C);
    }

    .btn-signup:hover, .btn-login:hover {
        transform: scale(1.05);
        filter: brightness(1.15);
    }

    /* Centering "Or" text */
    .or-text {
        margin: 0.5em 0;
        font-size: 1.2em;
        color: #ccc;
    }
</style>

