@using PMSWeb.ViewModels.JobOrderVM
@model JobOrderCreateViewModel

@{
    ViewBag.Title = "Create Job Order";
}

<style>
    .maintenance-details-container {
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 5px;
        max-width: 600px;
        margin: 20px auto;
        background-color: #f9f9f9;
    }

    .detail-item {
        margin-bottom: 10px;
    }

        .detail-item strong {
            display: inline-block;
            width: 150px;
            color: #333;
        }

        .detail-item span {
            color: #555;
        }
</style>

<h4>Create Job Order</h4>

<form asp-action="Create" method="post" class="form-horizontal">
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="maintenance-details-container">
            <h2>Maintenance Details</h2>

            <div class="detail-item">
                <strong>Name:</strong>
                <span>@Model.MaintenanceName</span>
            </div>

            <div class="detail-item">
                <strong>Equipment Name:</strong>
                <span>@Model.EquipmentName</span>
            </div>

            <div class="detail-item">
                <strong>Maintenance Type:</strong>
                <span>@Model.MaintenanceType</span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="JobName" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="JobName" class="form-control" />
                <span asp-validation-for="JobName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="JobDescription" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <textarea asp-for="JobDescription" class="form-control" rows="3"></textarea>
                <span asp-validation-for="JobDescription" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="DueDate" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="DueDate" class="form-control" type="date" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="LastDoneDate" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="LastDoneDate" class="form-control" type="date" />
                <span asp-validation-for="LastDoneDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Interval" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Interval" class="form-control" type="number" />
                <span asp-validation-for="Interval" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Type" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ResponsiblePosition" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="ResponsiblePosition" class="form-control" />
                <span asp-validation-for="ResponsiblePosition" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="hidden" asp-for="EquipmentId" />
                <input type="hidden" asp-for="Type" />
                <input type="hidden" asp-for="EquipmentName" />
                <input type="hidden" asp-for="MaintenanceName" />
                <input type="hidden" asp-for="MaintenanceName" />
                <input type="hidden" asp-for="MaintenanceType" />
                <input type="hidden" asp-for="RoutineMaintenanceId" />
                <input type="hidden" asp-for="SpecificMaintenanceId" />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>

    </div>  <!-- Class-form-horizontal ends here -->

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}