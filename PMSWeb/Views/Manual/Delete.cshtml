@using PMSWeb.ViewModels.Manual
@model ManualDeleteViewModel

@{
    ViewData["Title"] = "Delete Manual";
}

<h2>Delete Manual</h2>

<h3>Are you sure you want to delete this manual?</h3>
<div>
    <h4>Manual Details</h4>
    <table class="table table-bordered">
        <tr>
            <th>Name</th>
            <td>@Model.ManualName</td>
        </tr>
        <tr>
            <th>Maker Name</th>
            <td>@Model.MakerName</td>
        </tr>
        <tr>
            <th>Equipment Name</th>
            <td>@Model.EquipmentName</td>
        </tr>
        <tr>
            <th>Created On</th>
            <td>@Model.CreatedOn</td>
        </tr>
    </table>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ManualId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>