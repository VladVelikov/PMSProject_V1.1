@using PMSWeb.ViewModels.RM
@model RMDeleteViewModel

@{
    ViewData["Title"] = "Delete RM";
}

<h2>Delete Routine Maintenance (RM)</h2>

<h3>Do you really want to delete this RM?</h3>

<div>
    <h4>Routine Maintenance Details</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>

        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>

        <dt class="col-sm-2">
            Created On
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedOn
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="RmId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Select" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>