@using PMSWeb.ViewModels.RequisitionVM
@model RequisitionDeleteViewModel

@{
    ViewData["Title"] = "Delete Requisition";
}

<h2>Delete Requisition</h2>

<div class="container mt-4">
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Are you sure you want to delete this requisition?</h4>
        <p>This action cannot be undone. Please review the details of the requisition carefully before proceeding.</p>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <strong>Requisition Details</strong>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Requisition ID</th>
                        <td>@Model.RequisitionId</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>@Model.RequisitionName</td>
                    </tr>
                    <tr>
                        <th>Created On</th>
                        <td>@Model.CreatedOn</td>
                    </tr>
                    <tr>
                        <th>Type</th>
                        <td>@Model.RequisitionType</td>
                    </tr>
                   
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12 text-center">
            <form asp-action="ConfirmDelete" asp-route-id="@Model.RequisitionId" method="post" asp-antiforgery="true">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Select" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
