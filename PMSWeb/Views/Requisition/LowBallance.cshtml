@{
    ViewData["Title"] = "Low Balance Warning";
}

<div class="container mt-5">
    <div class="alert alert-danger text-center" role="alert" style="border: 2px solid #dc3545; border-radius: 8px;">
        <h4 class="alert-heading">⚠ Low Balance!</h4>
        <p class="mt-3">Your current balance is too low to approve selected requisition!</p>
       
    </div>

    <div class="text-center mt-4">
            <a asp-action="Select" class="btn btn-secondary btn-lg">Confirm</a>
    </div>
</div>
