@using PMSWeb.ViewModels.SM
@model SMDeleteViewModel

@{
    ViewData["Title"] = "Delete SM";
}



<h3 style="margin-bottom: 2em;">Do you really want to delete this Specific Maintenance?</h3>

<div>
    <h4>Specific Maintenance Details</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>

        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>

        <dt class="col-sm-2">
            Created On
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedOn
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="SmId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Select" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>