@using PMSWeb.ViewModels.SM
@model IEnumerable<SMDisplayViewModel>

@{
    ViewData["Title"] = "Specific Maintenance List";
}

<h2>Specific Maintenance List</h2>

<table class="table table-bordered table-striped">
    <a asp-action="Create" class="btn btn-success">Create Specific Maintenance</a>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Equipment</th>
            <th>Last Completed Date</th>
            <th>Interval (days)</th>
            <th>Responsible Position</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Equipment</td>
                <td>@item.LastCompletedDate</td>
                <td>@item.Interval</td>
                <td>@item.ResponsiblePosition</td>
                <td style="display:flex; flex-direction:column; gap:0.2em;">
                    <a asp-action="Edit" asp-route-id="@item.SpecMaintId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.SpecMaintId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.SpecMaintId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


