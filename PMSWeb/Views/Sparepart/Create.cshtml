@using PMSWeb.ViewModels.SparepartVM
@model SparepartCreateViewModel

@{
    ViewData["Title"] = "Create Spare Part";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Units" class="control-label"></label>
        <input asp-for="Units" class="form-control" />
        <span asp-validation-for="Units" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ROB" class="control-label"></label>
        <input asp-for="ROB" class="form-control" />
        <span asp-validation-for="ROB" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl" class="control-label"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EquipmentId" class="control-label">Equipment</label>
        <select asp-for="EquipmentId" class="form-control" asp-items="@(new SelectList(Model.Equipments,"Id", "Name"))">
            <option value="">-- Select Equipment --</option>
        </select>
        <span asp-validation-for="EquipmentId" class="text-danger"></span>
    </div>

    @if (Model.Equipments.Count() == 0)
    {
        <h3 style="color:lightcoral;">There are no Equipments yet.</h3>
        <h3 style="color:lightcoral;">Please create Equipments first.</h3>
    }

    <div style="margin-top: 0.5em;">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Select" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
         <partial name="_ValidationScriptsPartial" />
    }
}


